[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    build,
    dist,
    *.pyc,
    *.egg-info,
    .pytest_cache,
    .mypy_cache

# E203: whitespace before ':' (conflicts with Black)
# W503: line break before binary operator (conflicts with Black)
# E501: line too long (handled by Black)
ignore = E203, W503, E501

per-file-ignores =
    __init__.py:F401
    settings.py:E501

max-complexity = 10

